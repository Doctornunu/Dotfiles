# remove borders
for_window [class="^.*"] border pixel 3


exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id compton --config $HOME/.config/compton.conf

# lock screen
exec --no-startup-id xautolock -time 5 -locker $HOME/.config/i3/neolock.sh
bindsym $mod+l exec --no-startup-id SDL_VIDEO_FULLSCREEN_HEAD=0 $HOME/.config/i3/neolock.sh


